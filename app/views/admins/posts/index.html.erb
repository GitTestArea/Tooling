<div class="content">
	<div class="top-wrapper" align="center">
		<!-- Top画像 -->
		<img class="top-image" src="/assets/top.JPG">
	</div>
	<div class="main wrapper flex">
		<!-- 投稿一覧 -->
		<main class="main-contents">
			<div class="post-box">
				<div class="list-title">
					投稿一覧
				</div>
				<ul>
					<% if @posts.present? %>
						<% @posts.each do |post| %>
							<article class="main-box clearfix">
								<div class="post-image">
									<!-- ここで画像が空じゃないかの判定 -->
									<%if post.post_images.present? %>
										<%= link_to admins_post_path(post),data: {"turbolinks" => false} do %>
										<!-- 空じゃなかったら post.post_images.first 要素の一番最初だけを表示。 .lastだったら最後の画像の表示-->
										<!-- 3枚あったら .firstで1枚目 .lastで3枚目 -->
										<%= attachment_image_tag post.post_images.first, :image, :fill, 200,120,format:"jpeg",fallback:"no_image.jpg",size:"200x120" %>
										<% end %>
									<% end %>
								</div>
								<div class="post-location">
									<h4><%= post.location %></h4>
								</div>
								<div class="main-title">
									<%= link_to admins_post_path(post),data: {"turbolinks" => false} do %>
									<h3 class="post-title"><%= post.title %></h3>
									<% end %>
									<ul class="category-name">
										<li class="post-date"><%= post.created_at.strftime('%Y/%m/%d %R') %></li>
										<li class="post-category" style="margin-left: 7px;"><%= link_to post.category.name, admins_category_path(post.category_id),data: {"turbolinks" => false} ,class: 'category-link' %></li>
										<!-- <li class="post-location" style="margin-left: 7px;"><%= post.location %></li> -->
									</ul>
									<div class="post-comment-count">
										コメント(<%= post.comments.count %>)
										<%= link_to "削除", post_path(post), method: :delete, "data-confirm" => "本当に削除しますか？",class: "btn btn-danger" %>
									</div>
								</div>
							</article>
						<% end %>
					<% end %>
				</ul>
				<div class="pager">
					<%= paginate @posts %>
				</div>
			</div>
		</main>
		<aside class="side-contents">
		<!-- ランキング -->
		<div class="side-category">
			<div class="side-title">カテゴリー</div>
			<div style="text-align: center;">
			<form name="categoryselect">
			<%= select_tag :category_id, options_from_collection_for_select(Category.all, :id, :name),{include_blank: "カテゴリーを選択",class: "category-select"} %>
			</form>
			</div>
		</div>
			<!-- <script>
				window.onload = function(){
					//select変更時
					document.getElementById("category_id").onchange = function(){
						//遷移先URL取得
						var url = this.option[this.selectedIndex].value;
						//URLが取得できていればページ遷移
						if(url != ""){
							location.href = url;
						}
					};
				};
			</script> -->
			<script>
				window.addEventListener("load",function(){
					//select変更時
					document.getElementById("category_id").onchange = function(){
						const category = document.categoryselect.category_id;
						const select = category.selectedIndex;
						const value = category.options[select].value;
						if(value == "1"){
							location.href = "../categories/1";
						}else if(value == "2"){
							location.href = "../categories/2";
						}else if(value == "3"){
							location.href = "../categories/3";
						}else if(value == "4"){
							location.href = "../categories/4";
						}else if(value == "5"){
							location.href = "../categories/5";
						}
					};
				});
			</script>
		<div class="side-search">
			<div class="side-title location">タイトル検索</div>
			<div style="text-align: center;">
				<%= search_form_for @search, url: admins_posts_path do |search| %>
				    <div class="search-title">
	    				<%= search.text_field :title_cont %>
				    	<span><%= search.submit"検索",class: "location-submit btn" %></span>
				    </div>
				 <% end %>
			</div>
		</div>
		<div class="side-pageview">
			<div class="side-title pageview">人気記事</div>
				<div class="ranking-main">
					<ul>
						<% @most_viewed.each do |rank| %>
							<li>
								<div class="ranking-box clearfix">
									<div class="ranking">
										<%= link_to admins_post_path(rank),data: {"turbolinks" => false} do %>
										<div class="rank-image">
											<%= attachment_image_tag rank.post_images.first, :image, :fill, 150,80,format:"jpeg",fallback:"no_image.jpg",size:"100x80" %>
										</div>
										<div class="rank-title">
											<%= rank.title %>
										</div>
										<% end %>
									</div>
	        				<%#= rank.impressions_count %>
	        					</div>
	        				</li>
	    				<% end %>
	    			</ul>
				</div>
		</div>
		</aside>
	</div>
</div>